    <!-- Report generation -->
    <reporting>
        <plugins>
            <!-- Disable generation of mailinglist, ci -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>license</report>
                            <report>scm</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
    
    <distributionManagement>
        <site>
            <id>unitils.sf.net</id>
            <url>scp://shell.sourceforge.net/home/project-web/unitils/htdocs</url>
        </site>
    </distributionManagement>

    <repositories>
        <repository>
            <id>maven.tinyjee.org</id>
