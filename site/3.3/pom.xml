<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.unitils</groupId>
    <artifactId>unitils-site</artifactId>
    <version>3.4.2</version>
    <packaging>war</packaging>

    <name>Unitils</name>
    <url>http://www.unitils.org/</url>


    <scm>
        <connection>scm:svn:https://svn.code.sf.net/p/unitils/code/site/3.3/</connection>
        <developerConnection>scm:svn:https://svn.code.sf.net/p/unitils/code/site/3.3/</developerConnection>
        <url>https://svn.code.sf.net/p/unitils/code/site/3.3/</url>
    </scm>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>3.4</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.tinyjee</groupId>
                            <artifactId>doxia-include-macro</artifactId>
                            <version>1.0</version>
                        </dependency>
                        <!-- I needed these extra dependencies on my mac -->
                        <dependency>
                            <groupId>org.mozilla</groupId>
                            <artifactId>rhino</artifactId>
                            <version>1.7R4</version>
                        </dependency>
                        <dependency>
                            <groupId>com.habitsoft</groupId>
                            <artifactId>html-dtd-cache</artifactId>
                            <version>1.0</version>
                        </dependency>
                        <dependency><!-- add support for ssh/scp -->
                            <groupId>org.apache.maven.wagon</groupId>
                            <artifactId>wagon-ssh</artifactId>
                            <version>1.0</version>
                        </dependency>
                    </dependencies>
                    <configuration>
                        <templateFile>${basedir}/maven-site-unitils.mv</templateFile>
                        <outputEncoding>cp1252</outputEncoding>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>
        <dependency>
                            <groupId>com.habitsoft</groupId>
                            <artifactId>html-dtd-cache</artifactId>
                            <version>1.0</version>
